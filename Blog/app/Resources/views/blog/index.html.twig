{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content">
        <div class="row">
            {% for articles in article %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ articles.title }}</h2>
                        </header>

                        <p>
                            {{ articles.summary }}
                        </p>

                        <small class="author">
                            {{ articles.author }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('article_view', {'id' : articles.id }) }}">Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
